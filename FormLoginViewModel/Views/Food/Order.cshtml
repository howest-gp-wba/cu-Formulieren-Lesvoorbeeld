@model FoodOrderViewModel

<h1>Order</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-controller="Food" asp-action="Order" method="post">
    <div class="form-group">
        <label asp-for="Firstname"> </label>
        <input asp-for="Firstname" class="form-control">
        <span asp-validation-for="Firstname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lastname"> </label>
        <input asp-for="Lastname" class="form-control">
        <span asp-validation-for="Lastname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"> </label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    @* select *@
    <div class="form-group">
            <label asp-for="SelectedItem"></label>
            <span asp-validation-for="SelectedItem"></span>
            <select asp-for="SelectedItem" class="form-control" asp-items="@Model.Items"></select>
        </div>
    @* show the checkboxes *@
    <div class="form-group">
        @for(int i = 0;i < Model.Sauces.Count(); i++)
        { 
            <input asp-for="@Model.Sauces[i].IsSelected" />
            <label asp-for="@Model.Sauces[i].IsSelected">
                @Model.Sauces[i].Name
            </label>
            <input asp-for="@Model.Sauces[i].Id" />
            <input asp-for="@Model.Sauces[i].Name" />
        }
    </div>
    <button type="submit" class="btn btn-primary">Order</button>
</form>


